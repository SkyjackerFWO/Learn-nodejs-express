extends ../layouts/common.pug

block Content
  h1 Products

  .d-flex.align-items-center
    form.mb-3.ml-auto(action="/products/search", method="GET",class="d-flex")
        input(type="text",name= "q",class="form-control")
        button(type="button",class="btn btn-primary ml-2 ") Search
  .row
    each product in products
      .col-sm-6.col-md-4.cl-lg-3
        .card.m-a-0.mb-3
          img.card-img-top(src=product.img)
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='#') Get it