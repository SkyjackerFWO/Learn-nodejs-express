extends ../layouts/common.pug

block Content
  h1
    span.mr-3 Products

  .d-flex.align-items-center
    form.ml-auto(action="/products/search", method="GET",class="d-flex")
      input(type="text",name= "q", placeholder="Name",class="form-control mb-3")
      button(type="button",class="btn btn-primary ml-2 mb-3") Search
  .row
    each product in products
      .col-sm-6.col-md-4.col-lg-3
        .card.mb-3
          img.card-img-top(src=product.img)
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='/cart/add/' + product.id) Get it