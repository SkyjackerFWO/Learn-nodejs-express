extends ../layouts/common.pug

block Content
    h1 Login

    if errors
        each error in errors
            .alert.alert-warning(role='alert')= error

    form(action = "/auth/login" , method = "POST")
        .form-group
            label(for='Email') Email
            input#Email.form-control(type='email',name= "email" , placeholder='Enter your Email', value=values ?
            values.email : "")
        .form-group
            label(for='Password') Password
            input#Password.form-control(type='password',name= "password", placeholder='Your phone password', class="mb-2",value=values ?
            values.password : "")
        button.btn.btn-primary(type='submit') Login