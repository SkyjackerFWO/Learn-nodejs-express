extends ../layouts/common.pug

block Content
    h1 
        span.mr-3 Users
        a(href='/users/create', class="btn btn-primary") Create

    .d-flex.align-items-center
        form.ml-auto(action="/users/search", method="GET",class="d-flex")
            input(type="text",name= "q", placeholder="Name",class="form-control mb-3")
            button(type="button",class="btn btn-primary ml-2 mb-3") Search
    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td
                    img(src=user.avatar, width="64") 
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" + user.id) View User
